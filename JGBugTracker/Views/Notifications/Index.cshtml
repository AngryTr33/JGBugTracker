@model IEnumerable<JGBugTracker.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="border-bottom title-part-padding">
                <h4 class="card-title mb-0">All Notifications</h4>
            </div>
            <div class="card-body">
                <h6 class="card-subtitle mb-3">
                    Notifications
                </h6>
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th><strong>Notification Type</strong></th>
                                <th><strong>Created</strong></th>
                                <th><strong>Message</strong></th>
                                <th><strong>Action</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Notification notification in Model)
                            {
                                <tr>
                                    <td>@notification.NotificationType!.Name</td>
                                    <td>@notification.Created</td>
                                    <td>@notification.Message</td>
                                    <td>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/assets/extra-libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/extra-libs/datatables.net-bs4/js/dataTables.responsive.min.js"></script>
    <script src="~/dist/js/pages/datatable/datatable-basic.init.js"></script>
    }