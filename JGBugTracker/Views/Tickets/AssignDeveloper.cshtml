@model JGBugTracker.Models.ViewModels.AssignDeveloperViewModel

@{
    ViewData["Title"] = "Assign a Developer";
}
<div class="container">
    <h2>Assign Manager for</h2>
    <div class="row">
        <div class="col-md-6">
            <h3> @Model.Ticket!.Title</h3>
            <div class="card">
                <div class="card-header">
                    <label class="control-label">Assign Developer to Ticket</label>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets">
                        <input hidden asp-for="Ticket!.Id" />
                        <div class="col-12 mb-3">
                            <div class="form-group">
                                <select required asp-for="Ticket!.DeveloperUserId" class="form-control" asp-items="@Model!.Developers" multiple="multiple"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" class="btn alert-primary" value="Assign Developer" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Details" asp-controller="Tickets" asp-route-id="@Model.Ticket.Id">Back to All Projects</a>
    </div>
</div>