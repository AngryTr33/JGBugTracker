@model JGBugTracker.Models.ViewModels.AssignDeveloperViewModel

@{
    ViewData["Title"] = "AssignDeveloper";
}
<div class="row">
    <div class="col text-center">
        <h2>Assign Developer for</h2>
        <div class="row">
            <div class="col text-center">
                <h3> @Model.Ticket!.Title</h3>
                <div class="row">
                    <div class="col-lg-6 text-center mx-auto">
                        <div class="card">
                            <div class="card-header bg-dark">
                                <h4 class="mb-0 text-white">Assign A Developer</h4>
                            </div>
                            <div class="card-body">
                                <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets">
                                    <input hidden asp-for="Ticket!.Id" />
                                    <div class="col-12 mb-3">
                                        <div class="form-group">
                                            <select required asp-for="Ticket!.DeveloperUserId" class="form-control" asp-items="@Model!.Developers" multiple="multiple"></select>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="col mb-2">
                                            <input type="submit" class="btn alert-primary" value="Assign Developer" />
                                        </div>
                                    </div>
                                </form>
                                <div>
                                    <a class="btn alert-primary" asp-action="AllTickets" asp-controller="Tickets" asp-route-id="@Model.Ticket.Id">Back to Tickets</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
